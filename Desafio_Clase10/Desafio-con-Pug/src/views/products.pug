include partials/head
div(class="products-container")
    h1= "Productos"
    hr
    div(class="cards-container")
        if hasProducts
            each product in products
                div(class="card" style="width: 18rem;")
                    img(src=`http://localhost:8080/img/${product.image}` class="card-img-top" alt="...")
                    div(class="card-body")
                        h5(class="card-title title")= product.title
                        hr
                        h6(class="card-subtitle mb-2 text-muted")= product.price
        else
            p= "No hay productos disponibles"

    a(href='http://localhost:8080' class="btn btn-primary btn-volver")= "Volver al inicio"