<div class="products-container">
    <h1>Productos</h1>
    <hr>
    <div class="cards-container">
        {{#if hasProducts}}
            {{#each products}}
                <div class="card" style="width: 18rem;">
                    <img src="http://localhost:8080/img/{{this.image}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title title">{{this.title}}</h5>
                        <hr>
                        <h6 class="card-subtitle mb-2 text-muted">${{this.price}}</h6>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p>No hay productos disponibles</p>
        {{/if}}
    </div>
    <a href="http://localhost:8080" class="btn btn-primary btn-volver">Volver al inicio</a>
</div>